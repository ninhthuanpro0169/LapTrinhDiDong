<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        app:cardCornerRadius="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="325dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:background="@drawable/custom_nen"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_marginTop="10dp"
                    android:id="@+id/imageviewdulich"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_margin="5dp" />

                <TextView
                    android:id="@+id/textviewtendiadiem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Tên Địa Điểm: "
                    android:textColor="#4D4D87"
                    android:textSize="25sp"
                    android:textStyle="italic|bold" />

                <TextView
                    android:id="@+id/textviewdiachi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Địa chỉ "
                    android:textColor="#030304"
                    android:textSize="17sp"
                    android:textStyle="italic" />
            </LinearLayout>

        </FrameLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>